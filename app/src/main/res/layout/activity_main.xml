<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ScreenText"
        android:layout_width="346dp"
        android:layout_height="141dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/black"
        android:gravity="end|bottom"
        android:hint="@string/screen_text"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textIsSelectable="false"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/Row1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/Row1"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Row2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:id="@+id/buttonAC"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/all_clear"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonDEL"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/delete"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonMOD"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/modulo"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonDIV"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/divide"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row2"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Row3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/_7"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/_8"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/_9"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonMULT"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/x"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row3"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Row4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/_4"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/_5"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/_6"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonMIN"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/minus"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row4"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Row5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/_1"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/_2"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/_3"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonPLUS"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="@string/plus"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row5"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button0"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:text="@string/_0"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonDEC"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:text="@string/decimal"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            style="?android:attr/borderlessButtonStyle"
            />

        <Button
            android:id="@+id/buttonEQUALS"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:text="@string/equals"
            android:textColor="@android:color/black"
            android:textSize="32sp"
            style="?android:attr/borderlessButtonStyle"
            />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>