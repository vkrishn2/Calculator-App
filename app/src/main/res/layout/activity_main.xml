<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/ScreenText"
        android:layout_width="346dp"
        android:layout_height="141dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/screen_text"
        android:textIsSelectable="false"
        android:textSize="48sp"
        android:gravity="right|bottom"
        android:background="@android:color/black"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toTopOf="@+id/Row1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <LinearLayout
        android:id="@+id/Row1"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Row2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="AC"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="<-"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="%"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button49"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="/"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row2"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Row3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="7"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="8"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="9"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button50"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="X"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row3"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Row4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button9"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="4"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="5"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="6"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button51"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="-"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row4"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Row5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button14"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="1"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button11"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="2"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button10"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="3"
            android:textSize="20sp"
            android:background="@android:color/darker_gray"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/button52"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:text="+"
            android:textSize="20sp"
            android:background="@android:color/holo_orange_dark"
            android:textColor="@android:color/black"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Row5"
        android:layout_width="410dp"
        android:layout_height="85dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button13"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:text="0"
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button12"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/darker_gray"
            android:text="."
            android:textColor="@android:color/black"
            android:textSize="32sp" />

        <Button
            android:id="@+id/button53"
            android:layout_width="0dp"
            android:layout_height="85dp"
            android:layout_weight="1"
            android:background="@android:color/holo_orange_dark"
            android:text="="
            android:textColor="@android:color/black"
            android:textSize="32sp" />
    </LinearLayout>

</android.support.constraint.ConstraintLayout>